<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>1.534</version>

    </parent>


    <artifactId>ironmq-notifier</artifactId>
    <version>1.0.6-SNAPSHOT</version>
    <packaging>hpi</packaging>

    <name>IronMQ-notifier</name>
    <description>Jenkins build notification plugin which sends results to iron.io ironmq service</description>
    <url>http://wiki.jenkins-ci.org/display/JENKINS/Ironmq+Notifier</url>

    <licenses>

        <license>
            <distribution>repo</distribution>
            <name>The MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
            <comments>Check dependency plugins individually.</comments>
        </license>

    </licenses>

    <developers>
        <developer>
            <id>mikecaspar</id>
            <name>Mike Caspar</name>
            <email>mike@caspar.com</email>
        </developer>
    </developers>


    <pluginRepositories>

        <pluginRepository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </pluginRepository>

        <pluginRepository>
            <id>iron-io-repo</id>
            <name>Iron.io Maven repository on GitHub</name>
            <url>http://iron-io.github.io/maven/repository/</url>
        </pluginRepository>

    </pluginRepositories>

    <!-- get every artifact through repo.jenkins-ci.org, which proxies all the artifacts that we need -->
    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </repository>

        <repository>
            <id>iron-io-repo</id>
            <name>Iron.io Maven repository on GitHub</name>
            <url>http://iron-io.github.io/maven/repository/</url>
        </repository>

    </repositories>

    <dependencies>

        <dependency>
            <groupId>ironmq</groupId>
            <artifactId>ironmq</artifactId>
            <version>0.0.10</version>
        </dependency>

        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.2.4</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.10</version>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.8.5</version>
        </dependency>

    </dependencies>

    <scm>
        <connection>scm:git:ssh://github.com/jenkinsci/ironmq-notifier-plugin.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/jenkinsci/ironmq-notifier-plugin.git</developerConnection>
        <url>https://github.com/jenkinsci/ironmq-notifier-plugin</url>
    </scm>

    <ciManagement>
        <system>Jenkins</system>
        <url>https://buildhive.cloudbees.com/job/jenkinsci/job/${project.artifactId}-plugin</url>
         <notifiers>
            <notifier>
                <type>mail</type>
                <address>mike@caspar.com</address>
                <sendOnFailure>true</sendOnFailure>
                <sendOnError>true</sendOnError>
                <sendOnSuccess>true</sendOnSuccess>
            </notifier>
        </notifiers>
    </ciManagement>



</project>
